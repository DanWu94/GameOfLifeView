<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:game_of_life_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/toolbar"
        android:layout_gravity="center_horizontal|top" />

    <io.kimo.gameoflifeview.view.GameOfLifeView
        android:id="@+id/game_of_life"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        game_of_life_view:proportion="50"
        game_of_life_view:aliveCellColor="#000000"
        game_of_life_view:deadCellColor="#FFFFFF"
        game_of_life_view:clearMode="true"/>

</FrameLayout>